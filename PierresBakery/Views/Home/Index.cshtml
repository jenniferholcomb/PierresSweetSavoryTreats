@{
  Layout = "_Layout";
}

@using PierresBakery.Models

<h1>Welcome to Pierre's Sweet and Savory Bakery!</h1>
<hr>

<h3>We've got treats for you!</h3>
<h5>&emsp; <em>Select one below:</em></h5>
@if (Model["treats"].Length == 0)
{
  <p><strong>Oops!</strong> Our mistake. Unfortunately, we are currently out of treats.</p>
}
<ul>
  @foreach (Treat treat in Model["treats"])
  {
    <li>@Html.ActionLink(@treat.Name, "Details", "Treats", new { id = @treat.TreatId})</li>
  }
</ul>

<h5>&emsp; <em>Shop by flavor:</em></h5>
@if (Model["flavors"].Length == 0)
{
  <p><strong>Oops!</strong> Our mistake. Unfortunately, we currently aren't able to provide you a list of our flavors.</p>
}
<ul>
  @foreach (Flavor flavor in Model["flavors"])
  {
    <li>@Html.ActionLink(@flavor.Description, "Details", "Flavors", new { id = @flavor.FlavorId})</li>
  }
</ul>
<hr>
<p>
@Html.ActionLink("Manage Treats", "Index", "Treats")<br>
@Html.ActionLink("Manage Flavors", "Index", "Flavors")</p>
<hr>
<p>@Html.ActionLink("Create or manage an account", "Index", "Account")</p>