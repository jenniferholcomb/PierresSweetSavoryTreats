@{
  Layout = "_Layout";
}

@model PierresBakery.Models.Flavor

<h3><strong>EDIT:</strong> @Model.Description</h3>
<hr>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.DisplayNameFor(model => model.Description)
  @Html.EditorFor(model => model.Description)

  <input type="submit" value="Edit" />
}
<hr>
<p>
@Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })<br>
@Html.ActionLink("Return to Details", "Details", new { id = Model.FlavorId })<br>
@Html.ActionLink("Home", "Index", "Home")
</p>
