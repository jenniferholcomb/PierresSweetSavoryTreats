@{
  Layout = "_Layout";
}

@using PierresBakery.Models

<h3><em>Select a flavor profile to view,</em></h3>

@if(@Model.Count == 0)
{
  <h3>No flavors have been added yet.</h3>
}
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}
<hr>
<p>
@Html.ActionLink("Add new flavor", "Create")<br>
@Html.ActionLink("Home", "Index", "Home")
</p>